@page
@model ModernPhysics.Web.Areas.Admin.Pages.Manage.Categories.AddModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 class="display-4">Modern Physics - Add</h1>
<hr>

<div class="row">
    <div class="col-lg-12 mb-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Input.Name"></label>
                <input asp-for="@Model.Input.Name" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.Input.UseCustomFriendlyName"></label>
                <input asp-for="@Model.Input.UseCustomFriendlyName" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.Input.FriendlyName"></label>
                <input asp-for="@Model.Input.FriendlyName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.Input.Icon"></label>
                <input asp-for="@Model.Input.Icon" class="form-control" />
            </div>

            <div class="form-group">
                <button class="btn btn-success" type="submit">Add</button>
            </div>
        </form>
    </div>
</div>