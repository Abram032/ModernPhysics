@page "{id:Guid?}"
@model ModernPhysics.Web.Areas.Admin.Pages.Manage.Categories.EditModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 class="display-4">Fizyka Współczesna - Edytuj kategorię</h1>
<hr>

<div class="row">
    <div class="col-lg-12 mb-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Input.Name">Nazwa</label>
                <input asp-for="@Model.Input.Name" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.Input.UseCustomFriendlyName">Użyj własnej przyjaznej nazwy</label>
                <input asp-for="@Model.Input.UseCustomFriendlyName" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.Input.FriendlyName">Przyjazna nazwa</label>
                <input asp-for="@Model.Input.FriendlyName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.Input.Icon">Ikona</label>
                <input asp-for="@Model.Input.Icon" class="form-control" />
            </div>

            <div class="form-group">
                <button class="btn btn-success" type="submit">Zapisz</button>
            </div>
        </form>
    </div>
</div>