@page "{id:Guid?}"
@model ModernPhysics.Web.Areas.Admin.Pages.Manage.Categories.EditModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 class="display-4">Fizyka Współczesna - Edytuj kategorię</h1>
<hr>

<div class="row">
    <div class="col-lg-12 mb-4">
        <form method="post">

            @if(Model.Result != null)
            {
                <div class="alert alert-danger">@Model.Result</div>
            }

            <div class="form-group">
                <label asp-for="@Model.Input.Name"></label>
                <input asp-for="@Model.Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Input.FriendlyName"></label>
                <input asp-for="@Model.Input.FriendlyName" class="form-control" />
                <span asp-validation-for="Input.FriendlyName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Input.Icon"></label>
                <input asp-for="@Model.Input.Icon" class="form-control" />
                <span asp-validation-for="Input.Icon" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a href="https://fontawesome.com/icons?d=gallery&m=free">Lista dostępnych ikon</a>
            </div>

            <div class="form-group">
                <button class="btn btn-success" type="submit">Zapisz</button>
            </div>
        </form>
    </div>
</div>