@page
@model ModernPhysics.Web.Areas.Admin.Pages.Manage.PagesModel
@{
    ViewData["Title"] = "Pages";
    Layout = "~/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 class="display-4">Modern Physics - Pages</h1>
<hr>

<div class="row">
    <div class="col-lg-12 mb-4">
        <div class="card card-left-outline-info">
            <div class="card-header">
                <h4>Current pages:</h4>
            </div>
            <!-- Filter form -->
            <div class="card-body">
                <div class="mb-3">
                    <a class="btn btn-success" asp-page="./Pages/Add">Add Page</a>
                </div>

                <!-- /.Filter form -->
                <div class="table-responsive">
                    <table class="table table-striped table-sm" id="pages" cellspacing="0">
                        <thead>
                            <tr>
                                <th><input type="checkbox"></th>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Category</th>
                                <th>Tags</th>
                                <th>Date</th>
                                <th>Published</th>
                                <th>Edit</th>
                                <th>Remove</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.Pages)
                            {
                                <tr>
                                    <td><input type="checkbox"></td>
                                    <td><a href="#">@item.Title</a></td>
                                    <td><a href="#" class="badge badge-primary">@item.CreatedBy</a></td>
                                    <td><a href="#" class="badge badge-secondary">@item.Category.Name</a></td>
                                    <td>
                                        @if (item.PageTags == null)
                                        {
                                            <span>-</span>
                                        }
                                        else
                                        {
                                            @foreach (var tag in item.PageTags)
                                            {
                                                <a href="#" class="badge badge-info">@tag.Tag.Name</a>
                                            }
                                        }
                                    </td>
                                    <td>@item.CreatedAt</td>
                                    <td>
                                        @if (item.IsPublished == false)
                                        {
                                            <i class="fa fa-times danger"></i>
                                        }
                                        else
                                        {
                                            <i class="fa fa-check success"></i>
                                        }
                                    </td>
                                    <td>
                                        <form method="get" asp-page="./Pages/Edit" asp-route-id="@item.Id">
                                            <button type="submit" class="btn btn-warning">
                                                <i class="fa fa-edit"></i>
                                            </button>
                                        </form>
                                    </td>
                                    <td>
                                        <form method="post" asp-page-handler="delete" asp-route-id="@item.Id">
                                            <button type="submit" class="btn btn-danger">
                                                <i class="fa fa-times"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/site/pages.js"></script>
}