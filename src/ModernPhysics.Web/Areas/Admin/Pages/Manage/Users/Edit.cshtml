@page "{id:Guid?}"
@model ModernPhysics.Web.Areas.Admin.Pages.Manage.Users.EditModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 class="display-4">Fizyka Współczesna - Edytuj użytkownika</h1>
<hr>

<div class="row">
    <div class="col-lg-12 mb-4">
        <form method="post">

            @if(Model.Result != null)
            {
                <div class="alert alert-danger">@Model.Result</div>
            }

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.UserRole"></label>
                <select class="custom-select" asp-items="Model.Roles" asp-for="@Model.Input.UserRole"></select>
                <span asp-validation-for="Input.UserRole" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button class="btn btn-success" type="submit">Zapisz</button>
            </div>
        </form>
    </div>
</div>