@page
@model ModernPhysics.Web.Areas.Admin.Pages.Manage.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 class="display-4">Modern Physics - Dashboard</h1>
<hr>

<div class="row">
    <div class="col-lg-12 mb-4">
        <div class="card card-left-outline-success">
            <div class="card-header">
                <button id="dismiss" class="btn btn-default dismiss-button"><i class="fa fa-times-circle"></i></button>
                <h4>Your application is healthy!</h4>
            </div>
            <div class="card-body">
                <p><i class="fa fa-database"></i> Database: <i class="fa fa-check" style="color: #0d0;"></i></p>
                <p><i class="fa fa-globe"></i> WebApp: <i class="fa fa-check" style="color: #0d0;"></i></p>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <div class="card card-left-outline-warning">
            <div class="card-header">
                <button id="dismiss" class="btn btn-default dismiss-button"><i class="fa fa-times-circle"></i></button>
                <h4>Configuration requires your attention!</h4>
            </div>
            <div class="card-body">
                <p><i class="fa fa-certificate"></i> SSL Certificate is missing</p>
                <p><i class="fa fa-user-shield"></i> Set up privilages for users</p>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <div class="card card-left-outline-info">
            <div class="card-header">
                <button id="dismiss" class="btn btn-default dismiss-button"><i class="fa fa-times-circle"></i></button>
                <h4>New version of application is available!</h4>
            </div>
            <div class="card-body">
                <p>Current version: 0.0.1-alpha</p>
                <p>New version: 0.0.2-alpha</p>
            </div>
        </div>
    </div>

</div>