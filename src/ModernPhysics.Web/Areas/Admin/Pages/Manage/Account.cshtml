@page
@model ModernPhysics.Web.Areas.Admin.Pages.Manage.AccountModel
@{
    ViewData["Title"] = "Account";
    Layout = "~/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 class="display-4">Fizyka Współczesna - Konto</h1>
<hr>

@if(string.IsNullOrEmpty(Model.StatusMessage) == false)
{
    <partial name="_StatusMessage" />
}

<div class="row">
    <div class="col-md-6">
        <div class="card card-left-outline-info">
            <div class="card-header">
                <h4>Zmiana hasła:</h4>
            </div>
            <div class="card-body">
                <form id="change-password-form" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.OldPassword">Obecne hasło</label>
                        <input asp-for="Input.OldPassword" class="form-control" />
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.NewPassword">Nowe hasło</label>
                        <input asp-for="Input.NewPassword" class="form-control" />
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword">Powtórz nowe hasło</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Aktualizuj hasło</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}