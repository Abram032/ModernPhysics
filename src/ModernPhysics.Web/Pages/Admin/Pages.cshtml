@page
@model ModernPhysics.Web.Pages.Admin.PagesModel
@{
    ViewData["Title"] = "Pages";
    Layout = "~/Pages/Shared/_LayoutDashboard.cshtml";
}

<h1 class="display-4">Modern Physics - Pages</h1>
<hr>

<div class="row">
    <div class="col-lg-12 mb-4">
        <div class="card card-left-outline-info">
            <div class="card-header">
                <h4>Current pages:</h4>
            </div>
            <!-- Filter form -->
            <div class="card-body">
                @*<div class="mb-3">
                        <select class="mr-3">
                            <option disabled selected>Choose action</option>
                            <option value="delete">Mass delete</option>
                            <option value="edit">Mass edit</option>
                        </select>
                        <button class="btn btn-primary">Apply</button>

                    </div>*@

                <!-- /.Filter form -->
                <div class="table-responsive">
                    <table class="table table-striped table-sm" id="pages" cellspacing="0">
                        <thead>
                            <tr>
                                @*<th><input type="checkbox"></th>*@
                                <th>Title</th>
                                <th>Author</th>
                                <th>Category</th>
                                <th>Tags</th>
                                <th>Date</th>
                                <th>Published</th>
                                <th>Edit</th>
                                <th>Remove</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Pages)
                            {
                                <tr>
                                    @*<td><input type="checkbox"></td>*@
                                    <td><a href="#">@item.Title</a></td>
                                    <td>@item.CreatedBy</td>
                                    <td>@item.Category.Name</td>
                                    <td>
                                        @if (item.PageTags == null)
                                        {
                                            <span>-</span>
                                        }
                                        else
                                        {
                                            @foreach (var tag in item.PageTags)
                                            {
                                                <span>@tag.Tag.Name </span>
                                            }
                                        }
                                    </td>
                                    <td>@item.CreatedAt</td>
                                    <td>
                                        @if (item.IsPublished == false)
                                        {
                                            <i class="fa fa-times danger"></i>
                                        }
                                        else
                                        {
                                            <i class="fa fa-check success"></i>
                                        }
                                    </td>
                                    <td><button class="btn btn-warning"><i class="fa fa-edit"></i></button></td>
                                    <td><button class="btn btn-danger"><i class="fa fa-times"></i></button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/site/pages.js"></script>
}