@page
@model ModernPhysics.Web.Pages.ViewModel
@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<h4>Pages</h4>
@if (Model.Pages != null)
{
    <table class="table">
        <thead>
            <tr>
                <td>Id</td>
                <td>Title</td>
                <td>FriendlyUrl</td>
                <td>CreatedAt</td>
                <td>CreatedBy</td>
                <td>ModifiedAt</td>
                <td>ModifiedBy</td>
                <td>IsPublished</td>
                <td>IsDeleted</td>
                <td>Content</td>
                <td>Tags</td>
            </tr>
        </thead>
        @foreach (var item in Model.Pages)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.FriendlyUrl</td>
                <td>@item.CreatedAt</td>
                <td>@item.CreatedBy</td>
                <td>@item.ModifiedAt</td>
                <td>@item.ModifiedBy</td>
                <td>@item.IsPublished</td>
                <td>@item.IsDeleted</td>
                <td>@item.Content</td>
                <td>
                    @if (item.PageTags != null)
                    {
                        @foreach (var tag in item.PageTags)
                        {
                            if (tag != null)
                            {
                                @tag.Tag.Name 
                            }
                        }
                    }
                </td>
            </tr>
        }
    </table>
}
else
{
    <h4>No pages found.</h4>
}

<h4>Tags</h4>
@if (Model.Tags != null)
{
    <table class="table">
        <thead>
            <tr>
                <td>Id</td>
                <td>Title</td>
                <td>Pages</td>
            </tr>   
        </thead>
        <tbody>
            @foreach (var item in Model.Tags)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        @if (item.PageTags != null)
                        {
                            @foreach (var itemm in item.PageTags)
                            {
                                if (itemm != null)

                                {
                                    @itemm.Page.Id
                                }
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <h4>No tags found.</h4>
}
